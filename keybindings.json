[
  {
    "_description": "Go to next file tab when text editor has focus",
    "key": "ctrl+pageup",
    "command": "workbench.action.nextEditor"
  },
  {
    "_description": "Go to next terminal tab when terminal has focus",
    "key": "ctrl+pageup",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },
  {
    "_description": "Go to previous file tab when text editor has focus",
    "key": "ctrl+pagedown",
    "command": "workbench.action.previousEditor"
  },
  {
    "_description": "Go to previous terminal tab when terminal has focus",
    "key": "ctrl+pagedown",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },
  {
    "_description": "Open a new terminal",
    "key": "ctrl+t",
    "command": "workbench.action.terminal.new"
  },
  {
    "_description": "Open a new terminal tab when terminal has focus",
    "key": "ctrl+t",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  },
  {
    "_description": "Display hover content",
    "key": "alt+p",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
  },
  {
    "_description": "Give focus to text editor",
    "key": "ctrl+[Quote]",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "_description": "Give focus to terminal when text editor has focus",
    "key": "ctrl+[Quote]",
    "command": "workbench.action.terminal.focus",
    "when": "editorTextFocus"
  },
  {
    "_description": "Display parameter hints",
    "key": "alt+h",
    "command": "editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus"
  },
  {
    "_description": "Display suggestions",
    "key": "alt+s",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
  },
  {
    "_description": "Display suggestions",
    "key": "alt+s",
    "command": "toggleSuggestionDetails",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  {
    "_description": "Run task",
    "key": "ctrl+shift+t",
    "command": "workbench.action.tasks.runTask"
  }
]